<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <Button
        android:id="@+id/btnPlay"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/btnConfiguraciones"
        android:layout_alignTop="@+id/btnPuntajes"
        android:text="Play" />

    <Button
        android:id="@+id/btnPuntajes"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnInformacion"
        android:layout_marginTop="148dp"
        android:text="Puntajes" />

    <Button
        android:id="@+id/btnConfiguraciones"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btnInformacion"
        android:layout_marginStart="77dp"
        android:text="Configuraciones" />

    <Button
        android:id="@+id/btnInformacion"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="118dp"
        android:layout_marginEnd="60dp"
        android:text="Informacion" />
</RelativeLayout>